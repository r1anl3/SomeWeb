<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SomeWeb</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SomeWeb.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/somelogo-tprr.png" type="image/x-icon">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>

        <!-- Sidebar -->

        <div class="sidebar">
            <a class="logo" asp-controller="Home" asp-action="Index">
                <i class='bx bxs-game'></i>Some <span>Web</span> 
            </a>
            <ul class="side-menu">
                <li class="active">
                    <a asp-controller="Home" asp-action="Index">
                        <i class='bx bx-home-smile'></i>Home
                    </a>
                </li>
                <li class="">
                    <a asp-controller="Category" asp-action="Index">
                        <i class='bx bx-wallet'></i>Wallet
                    </a>
                </li>
                <li class="">
                    <a asp-controller="Category" asp-action="Analyse">
                        <i class='bx bx-analyse'></i>Analytics
                    </a>
                </li>
                <li class="">
                    <a asp-controller="" asp-action="">
                        <i class='bx bx-cog'></i>Settings
                    </a>
                </li>
            </ul>
            <ul class="side-menu">
                <li class="">
                    <a class="logout" asp-controller="" asp-action="">
                        <i class='bx bx-log-out'></i>Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- End of Sidebar -->

        <!-- Main content -->

        <div class="content">

            <!-- Navigation -->

            <nav>
                <i class='bx bx-menu'></i>
                <form action="#">
                    <div class="form-input">
                        <input type="search" placeholder="Search..."> 
                        <button class="search-btn" type="submit">
                            <i class='bx bx-search'></i>
                        </button>
                    </div>
                </form>
                <input type="checkbox" id="theme-toggle" hidden> 
                <label for="theme-toggle" class="theme-toggle"></label>
                <a class="notify">
                    <i class='bx bx-bell'></i>
                    <span class="count">14</span>
                </a>
                <a class="profile">
                    <img src="~/sample-profile.png" alt="use-profile">
                </a>
            </nav>

            <!-- End of Navigation -->
            @RenderBody()

        </div>

        <!-- End of Main content -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

