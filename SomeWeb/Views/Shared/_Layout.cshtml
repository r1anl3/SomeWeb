<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SomeWeb</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SomeWeb.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/somelogo-tprr.png" type="image/x-icon">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="light">
            <div class="sidebar">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class='bx bxs-game'></i>SomeWeb
                </a>
                <ul class="side-menu">
                    <li class="active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class='bx bx-home-smile'>Home</i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">
                            <i class='bx bx-wallet'>Wallet</i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Analyse">
                            <i class='bx bx-analyse'>Analyse</i>
                        </a>
                    </li>
                </ul>
                <ul class="side-menu">
                    <li class="nav-item">
                        <a class="logout" asp-controller="" asp-action="">
                            <i class='bx bx-log-out'>Logout</i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

